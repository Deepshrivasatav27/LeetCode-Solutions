# Code
python []
from collections import deque

# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right

class Solution(object):
    def maxLevelSum(self, root):
        """
        :type root: Optional[TreeNode]
        :rtype: int
        """
        if not root:
            return 0
        
        # Initialize queue for BFS
        queue = deque([root])
        
        # Trackers for the answer
        max_sum = float('-inf') # Start with lowest possible value
        max_level = 0
        current_level = 1
        
        while queue:
            level_sum = 0
            # Get number of nodes in the current level
            level_size = len(queue)
            
            # Process all nodes in the current level
            for _ in range(level_size):
                node = queue.popleft()
                level_sum += node.val
                
                if node.left:
                    queue.append(node.left)
                if node.right:
                    queue.append(node.right)
            
            # Update max_sum and max_level if we found a new maximum
            # We use > (strictly greater) to ensure we keep the smallest level index in case of ties
            if level_sum > max_sum:
                max_sum = level_sum
                max_level = current_level
            
            current_level += 1
            
        return max_level
